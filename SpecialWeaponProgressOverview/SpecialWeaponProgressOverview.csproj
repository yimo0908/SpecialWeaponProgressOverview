<Project Sdk="Dalamud.CN.NET.Sdk/13.1.0">

  <PropertyGroup>
    <Version>0.0.0.7</Version>
    <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
  </PropertyGroup>

  <Target Name="PackagePlugin" AfterTargets="Build" Condition="'$(Configuration)' == 'Debug'">
    <DalamudPackager
      ProjectDir="$(ProjectDir)"
      OutputPath="$(OutputPath)"
      AssemblyName="$(AssemblyName)"
      MakeZip="false"/>
  </Target>

  <Target Name="PackagePlugin" AfterTargets="Build" Condition="'$(Configuration)' == 'Release'">
    <DalamudPackager
      ProjectDir="$(ProjectDir)"
      OutputPath="$(OutputPath)"
      AssemblyName="$(AssemblyName)"
      MakeZip="true"/>
  </Target>

  <ItemGroup>
    <!-- KamiToolKit: project reference when using submodule (KamiToolKit) -->
    <ProjectReference Include="..\..\KamiToolKit\KamiToolKit.csproj" />
  </ItemGroup>

</Project>

